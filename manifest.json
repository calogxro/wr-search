{
  "manifest_version": 2,
  "name": "WordReference dictionary",
  "version": "3.1",
  "description": "Translate without leaving the page. Select the word to be translated and press Ctrl+Shift+Q.",
  "author": "Calogero Miraglia <calogeromir@gmail.com>",
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      }
    }
  }
}